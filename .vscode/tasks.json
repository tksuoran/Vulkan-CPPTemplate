{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake configure make",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/build && cd ${workspaceFolder}/build && cmake -G \"Unix Makefiles\" -DCMAKE_BUILD_TYPE=Debug ${workspaceFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "make build",
            "type": "shell",
            "command": "make -j8 -C ${workspaceFolder}/build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "make clean -C ${workspaceFolder}/build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect"
            },
            "group": "build",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "rm -fr build",
            "type": "shell",
            "command": "rm -fr ${workspaceFolder}/build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },

            "group": "build",
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
